local screens = require("main.screens")

function on_input(self, action_id, action)
	if action_id == hash("touch") then
		if action.pressed and not action.released then
			if gui.pick_node(gui.get_node("button_pause/root"), action.x, action.y) then
				screens.show("popup_pause")
			end
		end
	end
end
